{
  "name": "sudolang-llm-support",
  "displayName": "SudoLang LLM Support",
  "description": "SudoLang support for VS Code",
  "version": "2.0.0-rc.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paralleldrive/sudolang-llm-support.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:sudolang"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "vsce package",
    "install": "code --install-extension sudolang-llm-support-*.vsix"
  },
  "contributes": {
    "languages": [
      {
        "id": "sudolang",
        "aliases": [
          "SudoLang",
          "sudolang"
        ],
        "extensions": [
          ".sudo",
          ".sudo.md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sudolang",
        "scopeName": "source.sudo",
        "path": "./syntaxes/sudolang.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/node": "24.3.0",
    "typescript": "^4.3.2",
    "vsce": "^2.15.0"
  }
}
