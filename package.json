{
  "name": "sudolang-llm-support",
  "displayName": "SudoLang LLM Support",
  "description": "SudoLang can boost prompt performance with typed interfaces, constraints, and composition. Adds SudoLang syntax highlighting and language services for .sudo, .sudo.md, and .mdc files.",
  "version": "2.0.0",
  "publisher": "paralleldrive",
  "icon": "images/sudolang_icon_128.png",
  "engines": {
    "vscode": "^1.91.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paralleldrive/sudolang-llm-support.git"
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:sudolang"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "vsce package",
    "install": "code --install-extension sudolang-llm-support-*.vsix"
  },
  "contributes": {
    "languages": [
      {
        "id": "sudolang",
        "aliases": [
          "SudoLang",
          "sudolang"
        ],
        "extensions": [
          ".sudo",
          ".sudo.md",
          ".mdc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sudolang",
        "scopeName": "source.sudo",
        "path": "./syntaxes/sudolang.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/node": "14.x",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0"
  }
}
